extends layouts/main.pug

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post", enctype="multipart/form-data")
            label(for="videofile") Video File
            input(type="file", id="video-file", name="videoFile", required="true", accept="video/*")
            input(type="text", placeholder="Title" name="title", required="true")
            input(type="text", placeholder="Description", name="description", required="true")
            input(type="submit", value="Upload Video")